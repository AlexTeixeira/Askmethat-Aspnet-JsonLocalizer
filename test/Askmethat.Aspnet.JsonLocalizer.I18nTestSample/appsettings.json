{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "JsonLocalizationOptions": {
    "ResourcesPath": "i18n",
    "CacheDuration": "00:00:15",
    "DefaultCulture": "pt-PT",
    "DefaultUICulture": "pt-PT",
    "SupportedCultureInfos": [ "en-US", "fr-FR", "pt-PT" ],
    "IsAbsolutePath": true,
    "FileEncodingName": "utf-8",
    "UseBaseName": false
  }
}
